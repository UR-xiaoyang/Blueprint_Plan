{
  "name": "blueprint-plan",
  "private": true,
  "version": "0.2.1",
  "description": "An application for managing blueprints and plans",
  "license": "GPL-3.0-or-later",
  "author": "URxiaoyang",
  "copyright": "Copyright Â© 2025 URxiaoyang",
  "productName": "Blueprint Plan",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "dist": "npm run build && electron-builder",
    "cap:sync": "npx cap sync",
    "cap:build": "npm run build && npm run cap:sync",
    "android:dev": "npm run cap:build && npx cap run android",
    "android:build": "npm run cap:build && npx cap build android",
    "android:open": "npx cap open android"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@capacitor/android": "^7.4.0",
    "@capacitor/cli": "^7.4.0",
    "@capacitor/core": "^7.4.0",
    "@capacitor/splash-screen": "^7.0.0",
    "@capacitor/status-bar": "^7.0.0",
    "@emotion/is-prop-valid": "^1.3.1",
    "@tauri-apps/api": "^2.0.0-beta.13",
    "@types/react-countup": "^4.3.0",
    "@types/react-window": "^1.8.8",
    "@types/recharts": "^1.8.29",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.2",
    "framer-motion": "^12.19.1",
    "lucide-react": "^0.523.0",
    "react": "^18.3.1",
    "react-countup": "^6.5.3",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.1",
    "react-window": "^1.8.11",
    "recharts": "^3.0.0",
    "y-leveldb": "^0.1.0",
    "y-webrtc": "^10.3.0",
    "yjs": "^13.6.14"
  },
  "devDependencies": {
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "electron": "^31.0.2",
    "electron-builder": "^26.0.12",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  },
  "main": "electron/main.cjs",
  "build": {
    "publish": "onTagOrDraft",
    "appId": "com.yourcompany.blueprintplan",
    "productName": "Blueprint Plan",
    "asarUnpack": [
      "**/node_modules/@ant-design/colors/**/*"
    ],
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "pkg"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "tar.gz"
      ],
      "maintainer": "URxiaoyang <xiaoyang@ur-xiaoyang.com>"
    }
  }
}
